<?php defined('SYSPATH') or die('No direct script access.');

class Setting_Model extends Model {

	public function __construct(){

		parent::__construct(); // assigns database object to $this->db
	}

    public function getSettings(){

        return $this->db->select() // selects all fields by default
                ->where('user_id', 9)
                ->from('settings')
                ->get();
    }

    public function saveSettings($data){

        return $this->db->update('settings', $data, array('user_id' => 9));
    }

    public function updateItem($data, $id){

        return $this->db->update('settings', $data, array('id' => $id));
    }
}
 
